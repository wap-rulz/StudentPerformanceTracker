@model StudySession

<h2>Edit Study Session</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Date</label>
        <input type="date" class="form-control" asp-for="Date" />
    </div>
    <div class="form-group">
        <label>Duration (minutes)</label>
        <input type="number" class="form-control" asp-for="Duration" />
    </div>
    <div class="form-group">
        <label>Subject</label>
        <input type="text" class="form-control" asp-for="Subject" />
    </div>
    <div class="form-group">
        <label>Type</label>
        <select class="form-control" asp-for="Type">
            <option>Study</option>
            <option>Break</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
