@model IEnumerable<dynamic>

@{
	ViewData["Title"] = "Modules";
}

<h2>Modules</h2>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Credits</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var module in Model)
		{
			<tr>
				<td>@module.Id</td>
				<td>@module.Name</td>
				<td>@module.Credits</td>
				<td>
					<a asp-action="Edit" asp-route-id="@module.Id">Edit</a> |
					<a asp-action="Delete" asp-route-id="@module.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<div>
	<a asp-action="Create">Add New Module</a>
</div>
